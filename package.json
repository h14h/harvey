{
	"name": "harvey",
	"version": "0.1.0",
	"description": "CLI application for long-running AI conversations with intelligent context management",
	"type": "module",
	"module": "src/index.ts",
	"bin": {
		"harvey": "./src/index.ts"
	},
	"scripts": {
		"start": "bun ./src/index.ts",
		"dev": "bun --hot ./src/index.ts",
		"test": "bun test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check . && bun run typecheck",
		"typecheck": "tsc --noEmit",
		"build": "bun ./scripts/build.ts",
		"postinstall": "mkdir -p ~/.local/bin 2>/dev/null; ln -sf \"$PWD/src/index.ts\" ~/.local/bin/harvey && chmod +x ~/.local/bin/harvey || true && simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run check"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"simple-git-hooks": "^2.13.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"js-tiktoken": "^1.0.21",
		"openai": "^6.16.0"
	}
}
